#include dracula.conf
#include diff.conf
# font_family     Fira Code SemiBold
font_size 		13.0
# bold_font       auto
# italic_font      auto
# bold_italic_font auto

background_opacity 1
confirm_os_window_close 0

scrollback_lines 2000
wheel_scroll_min_lines 1

enable_audio_bell no
# selection_foreground none
# selection_background none

window_padding_width 4
# cursor #dddddd


# BEGIN_KITTY_THEME
# Catppuccin-Macchiato
include current-theme.conf
# END_KITTY_THEME

# Add emoji support
symbol_map U+1F300-U+1F6FF Noto Color Emoji
symbol_map U+1F900-U+1F9FF Noto Color Emoji
symbol_map U+2600-U+26FF Noto Color Emoji
symbol_map U+2700-U+27BF Noto Color Emoji
symbol_map U+1F680-U+1F6FF Noto Color Emoji


# BEGIN_KITTY_FONTS
font_family      family="FiraCode Nerd Font Mono"
bold_font        auto
italic_font      auto
bold_italic_font auto
# END_KITTY_FONTS